<div class="profile_details w3l" style="float: right;">
    <ul>
        <li class="dropdown profile_details_drop">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <div class="profile_img">
                <span class="prfil-img">
                    <img src="~/img/profile.jpg" alt="">
                </span>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-name">
                        <p>@User.Identity.Name</p>
                        @if (User.IsInRole("Administrator"))
                        {
                            <span>Administrator</span>
                        }
                        else
                        {
                            <span>Employee</span>
                        }   
                    </div>
                    <i class="fa fa-angle-down"></i>
                    <i class="fa fa-angle-up"></i>
                        <div class="clearfix"></div>
                    }
                    else
                    {
                        <div class="user-name">
                            <p>Welcome! you are in guest mode</p>
                            <span>Please Signup Or Login</span>            
                        </div>
                        <i class="fa fa-angle-down"></i>
                        <i class="fa fa-angle-up"></i>
                        <div class="clearfix"></div>
                    }
                </div>    
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="dropdown-menu drp-mnu">
                    <li>
                        <a asp-controller="Users" asp-action="ChangePassword"><i class="fa fa-user"></i> Profile</a>
                    </li>
                    <li>
                        <a asp-controller="Users" asp-action="Logout" method="post"><i class="fa fa-sign-out"></i> Logout</a>
                    </li>
                </ul>
            }
            else
            {
                <ul class="dropdown-menu drp-mnu">
                    <li>
                        <a asp-controller="Users" asp-action="Register"><i class="fa fa-user-plus"></i> Register</a>
                    </li>
                    <li>
                        <a asp-controller="Users" asp-action="Login"><i class="fa fa-sign-in"></i> Login</a>
                    </li>
                </ul>
            }
            
        </li>
    </ul>
</div>